{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .card {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        margin: 0 auto;
    }
    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }
    .btn {
        padding: 10px 20px;
        font-size: 18px;
        border: none;
        background-color: #3498db;
        color: white;
        border-radius: 5px;
        cursor: pointer;
    }
    .btn:hover {
        background-color: #2980b9;
    }
</style>

<div class="card">
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.firstname, {
            label: 'FirstName'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'LastName'
        }) }}
        {{ form_row(registrationForm.activityarea, {
            label: 'Activity Area'
        }) }}
        {{ form_row(registrationForm.contracttype, {
            label: 'Contract Type'
        }) }}
        {{ form_row(registrationForm.releasedate, {
            label: 'Release Date'
        }) }}
        {{ form_row(registrationForm.picture, {
            label: 'Add picture'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}